<Post>:
    orientation: 'vertical'
    size_hint_y: None
    height: "520dp"
    spacing: 10

    MDBoxLayout:
        padding: "5dp"
        adaptive_height: True

        TwoLineAvatarListItem:
            text: root.name
            secondary_text: root.updated_ago
            divider: None
            _no_ripple_effect: True

            ImageLeftWidget:
                source: root.avatar
                radius: [20, ]

        MDIconButton:
            icon: "dots-horizontal"

    MDBoxLayout:
        adaptive_height: True
        height: 10
        padding: 10, 0 , 0, 0
        MDLabel:
            adaptive_height: True
            text: root.caption

    # Actual post
    FitImage:
        adaptive_height: True
        source: root.post

    MDBoxLayout:
        adaptive_height: True
        padding: 5
        spacing: 1
        FitImage:
            source: "assets/images/facebook-reactions/like.png"
            size_hint: None, None
            size: 15, 15
            radius: [10, ]
        FitImage:
            source: "assets/images/facebook-reactions/love.png"
            size_hint: None, None
            size: 15, 15
            radius: [10, ]
        FitImage:
            source: "assets/images/facebook-reactions/haha.png"
            size_hint: None, None
            size: 15, 15
            radius: [10, ]

        MDLabel:
            text: f"{root.likes}"
            font_size: 13
        Widget:

        MDLabel:
            text: f"{root.comments} comments"
            shorten: True
            font_size: 13

    MDBoxLayout:
        adaptive_height: True
        padding: 5

        Reactions:
            icon: "thumb-up-outline"
            text: "Like"
        Widget:
        Reactions:
            icon: "comment-outline"
            text: "Comment"
        Widget:
        Reactions:
            icon: "share-outline"
            text: "Share"

<Reactions@MDRectangleFlatIconButton>:
    theme_text_color: "Custom"
    text_color: 0, 0, 0, 1
    line_color: 1, 1, 1, 1
    icon_color: 0, 0, 0, 1