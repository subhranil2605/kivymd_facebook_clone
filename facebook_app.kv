#:import get_color_from_hex kivy.utils.get_color_from_hex        
#:import ThreeIconButton components.top_three_buttons.ThreeIconButton
#:import AvatarImage components.avatar_image.AvatarImage
#:import OnlineAvatarImage components.online_friends.OnlineAvatarImage

<FacebookApp>:
    md_bg_color: 1, 1, 1, 1

    MDBoxLayout:
        orientation: 'vertical'

        # Appbar for our app
        MDToolbar:
            md_bg_color: 1, 1, 1, 1
            title: "facebook"
            right_action_items: [["magnify"], ["facebook-messenger"]]
            specific_text_color: get_color_from_hex("#1777F2")
        MDBoxLayout:
            adaptive_size: True
            height: 30
            spacing: 30

            MDIconButton:
                icon: "home"
            MDIconButton:
                icon: "account-circle-outline"
            MDIconButton:
                icon: "account-group-outline"
            MDIconButton:
                icon: "menu"


        MDBoxLayout:

            ScrollView:

                # Timeline
                MDBoxLayout:
                    adaptive_height: True

                    # Profile pic and status components
                    MDBoxLayout:
                        adaptive_height: True
                        orientation: 'vertical'
                        id: timeline

                        MDSeparator:

                        MDBoxLayout:
                            orientation: 'horizontal'
                            padding: 10
                            spacing: 20
                            adaptive_height: True
                            height: 100

                            # Profile picture
                            AvatarImage:
                                source: root.profile_pic

                            # update status button
                            MDRoundFlatButton:
                                text: "Write something here..\nWrite something here..."
                                size_hint: 1, 1
                                line_color: 0, 0, 0, 1
                                text_color: 0, 0, 0, 1


                        MDSeparator:

                        # Live, Photo and Reel Buttons
                        MDBoxLayout:
                            adaptive_height: True
                            height: 40
                            padding: 5
                            spacing: 10

                            ThreeIconButton:
                                text: "Live"
                                icon: "video"
                                icon_color: get_color_from_hex("#F2413D")

                            MDSeparator:
                                size_hint_x: None
                                width: 1
                                height: 40

                            ThreeIconButton:
                                text: "Photo"
                                icon: "image-multiple"
                                icon_color: get_color_from_hex("#86BE49")

                            MDSeparator:
                                size_hint_x: None
                                width: 1
                                height: 40

                            ThreeIconButton:
                                text: "Reels"
                                icon: "movie-play"
                                icon_color: get_color_from_hex("#00A4F5")


                        MDSeparator:
                            size_hint_y: None
                            height: 12

                        # List of online friends images
                        ScrollView:
                            size_hint_y: None
                            height: 70
                            bar_width: 0

                            MDBoxLayout:
                                adaptive_width: True
                                spacing: 30
                                padding: 10

                                MDRoundFlatIconButton:
                                    text: "Create\nRoom"
                                    icon: "video-plus"
                                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                                MDBoxLayout:
                                    id: online_friends
                                    padding: 10
                                    spacing: 50

                        MDSeparator:
                            size_hint_y: None
                            height: 12
                        
                        MDBoxLayout:
                            adaptive_height: True
                            padding: 10
                            height: 200

                            ScrollView:
                                size_hint_y: None
                                height: "190dp"
                                bar_width: 0

                                MDBoxLayout:
                                    adaptive_width: True
                                    spacing: 100

                                    MDRelativeLayout:
                                        md_bg_color: 1, 1, 1, 1
                                        size_hint_y: None
                                        size: "110dp", "190dp"

                                        MDRelativeLayout:
                                            md_bg_color: get_color_from_hex("#EBEBEB")
                                            radius: 15
                                            pos_hint: {'top': 1, 'left': 1}
                                            size_hint: None, None
                                            orientation: 'vertical'
                                            size: "100dp", "190dp"

                                            FitImage:
                                                source: root.profile_pic
                                                radius: [15, 15, 0, 0]
                                                mipmap: True
                                                size_hint: None, None
                                                size: "100dp", "120dp"
                                                pos_hint: {'top': 1, 'left': 1}


                                            FitImage:
                                                source: "assets/images/plus.png"
                                                pos_hint: {'center_x': 0.5, 'center_y': 0.35}
                                                size_hint: None, None
                                                size: 40, 40

                                            MDLabel:
                                                text: "Create Story"
                                                theme_text_color: "Custom"
                                                text_color: 0, 0, 0, 1
                                                halign: 'center'
                                                font_size:14
                                                pos_hint: {'center_x': 0.5, 'center_y': 0.1}
                                                adaptive_height: True

                                    MDBoxLayout:
                                        id: stories

                        MDSeparator:
                            size_hint_y: None
                            height: 12